{
  "name": "banking-devops-api",
  "version": "1.0.0",
  "description": "Production-grade Banking REST API with full DevOps pipeline",
  "main": "src/app.js",
  "scripts": {
    "start": "node src/app.js",
    "dev": "nodemon src/app.js",
